{% extends 'base.html.twig' %}

{% block title %}Gestion des utilisateurs{% endblock %}

{% block body %}
    <div>
        <h1>Gestion des utilisateurs</h1>
        <p>
            <a href="{{ path('user_edit', {'id': 0}) }}">Ajouter un nouvel utilisateur</a>
        </p>
        <table class="table table-striped table-bordered table-hover">
            <tr>
                <th>Prénom</th>
                <th>Nom</th>
                <th>Adresse email</th>
                <th>Création</th>
                <th>Mis à jour</th>
                <th>Modifier</th>
                <th>Supprimer</th>
            </tr>
            {% for user in users %}
                <tr>
                    <td>{{ user.firstname }}</td>
                    <td>{{ user.lastname }}</td>
                    <td>{{ user.email }}</td>
                    <td>{{ user.createdat|date("m/d/Y H:i") }}</td>
                    <td>{{ user.updatedat|date("m/d/Y H:i") }}</td>
                    <td><a role="button" class="btn btn-info" href="">Modifier</a></td>
                    <td><a role="button" class="btn btn-info" href="">Supprimer</a></td>
                </tr>
            {% endfor %}    
        </table>
    </div>
{% endblock %}